<div class="container">
<h1> Hello there <%= name %> </h1> 
<button><a href="/profile">View Profile</a></button>
<table>
  <tr>
    <td>Subjects</td>    
  </tr>
  <% arrayOfSubjects.forEach(sub => { %>
    <tr><td> <%= sub %></td></tr>
    <tr>
      <td> GRADE:</td>
      <td>MARK:</td>
      <td>TEST NUMBER:</td>
    </tr>
    <% const kid = student.grade.find(grade => grade.subject === sub); %>
    <% if (Array.isArray(kid)) { %>
      <% kid.forEach(kidItem => { %>
        <tr>
          <td><%= kidItem.grade %></td>
          <td><%= kidItem.mark %></td>
          <td><%= kidItem.testNo %></td>
        </tr>
      <% }); %>
    <% } else if (kid !== undefined) { %>
      <tr>
        <td><%= kid.grade %></td>
        <td><%= kid.mark %></td>
        <td><%= kid.testNo %></td>
      </tr>
    <% } %>
    
  <% }); %>
</table>
