<body>
  <h1>Create Teacher</h1>
  <div id="popupOverlay" class="popup-overlay">
    <div class="popup-content">
      <h2>Enter Password</h2>
      <input type="password" id="lockpassword" placeholder="Enter Teacher Lock">
      <button onclick="validatePassword()">Submit</button>
    </div>
  </div>
  <form action="/registerteacher" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br><br>

    <div id="subjectsContainer">
        <% if (Array.isArray(subjects) && subjects.length > 0) { %>
          <% for (let i = 0; i < subjects.length; i++) { %>
            <label for="subject<%= i + 1 %>">Subject <%= i + 1 %>:</label>
            <input type="text" id="subject<%= i + 1 %>" name="subjects[<%= i %>][name]" required>
            <label for="years<%= i + 1 %>">Years (separated by commas):</label>
            <input type="text" id="years<%= i + 1 %>" name="subjects[<%= i %>][years]" required><br><br>
            <button type="button" class="remove-subject-btn" onclick="removeSubject(this)"><i class="fas fa-minus"></i></button>
          <% } %>
        <% } %>
      </div>

    <button type="button" class="add-subject-btn" onclick="addSubject()"><i class="fas fa-plus"></i></button><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br><br>

    <input type="submit" value="Create Teacher">
  </form>
