  <script>
    // Function to add more subject fields
    function addSubject() {
      
      const subjectsContainer = document.getElementById('subjectsContainer');
      const subjectIndex = subjectsContainer.children.length + 1;
      const subjectDiv = document.createElement('div');
      subjectDiv.innerHTML = `
      <label for="subject${subjectIndex}">Subject ${subjectIndex}:</label>
        <input type="text" id="subject${subjectIndex}" name="subjects[${subjectIndex - 1}][name]" required>
        <label for="years${subjectIndex}">Years (separated by commas):</label>
        <input type="text" id="years${subjectIndex}" name="subjects[${subjectIndex - 1}][years]" required><br><br>
        <button type="button" class="remove-subject-btn" onclick="removeSubject(this)"><i class="fas fa-times"></i></button><br><br>
      `;
      
      subjectsContainer.appendChild(subjectDiv);
    }

    function removeSubject(button) {
      const subjectDiv = button.parentNode;
      subjectDiv.remove();
    }

    function showPasswordPopup() {
      const overlay = document.getElementById('popupOverlay');
      overlay.style.display = 'flex';
    }

    // Function to hide the password popup
    function hidePasswordPopup() {
      const overlay = document.getElementById('popupOverlay');
      overlay.style.display = 'none';
    }

    // Function to validate the password
    function validatePassword() {
      const passwordInput = document.getElementById('lockpassword');
      const lockpassword = passwordInput.value;
      if (lockpassword === '76376835') {
        hidePasswordPopup();
      } else {
        alert('Wrong password! Please try again.');
      }
    }

    window.onload = function(){
        showPasswordPopup();
    };
  </script>
