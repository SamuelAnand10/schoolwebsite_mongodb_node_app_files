<title>My Assignments</title>
<div class="container">
<h1>Completed Assignments:</h1>
<div class="container">
  <% if (doneAlready.length === 0) { %>
    <p>No completed assignments found.</p>
  <% } else { %>
    <ul>
      <% doneAlready.forEach(completed => { %>
        <li>
          <!-- Display active assignment details -->
          <p>Subject: <%= completed.subject %></p>
          <p>Class: <%= completed.class %></p>
          <p>Test Number: <%= completed.testNumber %></p>
          <p>Due Date: <%= completed.dueDate.toDateString() %></p>
          <p>Teacher: <%= completed.teacherName %></p>
          <!-- Add more details as needed -->

          <!-- Provide download link -->
          <button><a href="/resubmit/<%= completed._id %>">resubmit Assignment</a></button>
          <!-- Add a delete button if needed -->
          
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>



<h1>Active Assignments:</h1>
<div class="container">
  <% const activeTasks = assigned.filter(assignment => assignment.dueDate >= new Date()); %>
  <% if (activeTasks.length === 0) { %>
    <p>No active assignments found.</p>
  <% } else { %>
    <ul>
      <% activeTasks.forEach(assignment => { %>
        <li>
          <!-- Display active assignment details -->
          <p>Subject: <%= assignment.subject %></p>
          <p>Class: <%= assignment.class %></p>
          <p>Test Number: <%= assignment.testNumber %></p>
          <p>Due Date: <%= assignment.dueDate.toDateString() %></p>
          <p>Teacher: <%= assignment.teacherName %></p>
          <!-- Add more details as needed -->

          <!-- Provide download link -->
          <button><a href="/submitAssignment/<%= assignment._id %>">Do Assignment</a></button>
          <!-- Add a delete button if needed -->
          
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
  <h1>Overdue Assignments:</h1>
  <div class="container">
  <% const overdueTasks = assigned.filter(assignment => assignment.dueDate < new Date()); %>
  <% if (overdueTasks.length === 0) { %>
    <p>No overdue assignments found.</p>
  <% } else { %>
    <ul>
      <% overdueTasks.forEach(assignment => { %>
        <li class="overdue-assignment">
          <!-- Display overdue assignment details -->
          <p>Subject: <%= assignment.subject %></p>
          <p>Class: <%= assignment.class %></p>
          <p>Test Number: <%= assignment.testNumber %></p>
          <p>Due Date: <%= assignment.dueDate.toDateString() %></p>
          <p>Teacher: <%= assignment.teacherName %></p>
